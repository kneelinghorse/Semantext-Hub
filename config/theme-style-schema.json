{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OSSP-AGI Visualization Theme Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name", "drawio", "cytoscape"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": ["integer", "string"]
    },
    "palette": {
      "type": "object",
      "description": "Token palette for colors, fonts, and reusable values.",
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "description": "Optional authoring metadata for the theme.",
      "additionalProperties": true
    },
    "drawio": {
      "$ref": "#/definitions/drawioConfig"
    },
    "cytoscape": {
      "$ref": "#/definitions/cytoscapeConfig"
    }
  },
  "definitions": {
    "styleMap": {
      "type": "object",
      "additionalProperties": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "number"
          },
          {
            "type": "integer"
          },
          {
            "type": "boolean"
          }
        ]
      }
    },
    "styleWrapper": {
      "type": "object",
      "required": ["style"],
      "additionalProperties": false,
      "properties": {
        "style": {
          "$ref": "#/definitions/styleMap"
        }
      }
    },
    "drawioDefaults": {
      "type": "object",
      "required": ["node", "edge"],
      "additionalProperties": false,
      "properties": {
        "node": {
          "type": "object",
          "required": ["width", "height", "style"],
          "additionalProperties": false,
          "properties": {
            "width": {
              "type": "number",
              "minimum": 1
            },
            "height": {
              "type": "number",
              "minimum": 1
            },
            "style": {
              "$ref": "#/definitions/styleMap"
            }
          }
        },
        "edge": {
          "$ref": "#/definitions/styleWrapper"
        }
      }
    },
    "styleClassMap": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["style"],
        "additionalProperties": false,
        "properties": {
          "style": {
            "$ref": "#/definitions/styleMap"
          }
        }
      }
    },
    "drawioConfig": {
      "type": "object",
      "required": ["defaults"],
      "additionalProperties": false,
      "properties": {
        "defaults": {
          "$ref": "#/definitions/drawioDefaults"
        },
        "nodeTypes": {
          "$ref": "#/definitions/styleClassMap"
        },
        "domains": {
          "$ref": "#/definitions/styleClassMap"
        },
        "edgeTypes": {
          "$ref": "#/definitions/styleClassMap"
        }
      }
    },
    "cytoscapeDefaults": {
      "type": "object",
      "required": ["node", "edge", "layout"],
      "additionalProperties": false,
      "properties": {
        "node": {
          "$ref": "#/definitions/styleWrapper"
        },
        "edge": {
          "$ref": "#/definitions/styleWrapper"
        },
        "layout": {
          "type": "object",
          "additionalProperties": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "number"
              },
              {
                "type": "integer"
              },
              {
                "type": "boolean"
              }
            ]
          }
        }
      }
    },
    "cytoscapeConfig": {
      "type": "object",
      "required": ["defaults"],
      "additionalProperties": false,
      "properties": {
        "defaults": {
          "$ref": "#/definitions/cytoscapeDefaults"
        },
        "nodeTypes": {
          "$ref": "#/definitions/styleClassMap"
        },
        "domains": {
          "$ref": "#/definitions/styleClassMap"
        },
        "edgeTypes": {
          "$ref": "#/definitions/styleClassMap"
        }
      }
    }
  }
}
